    "@babel/register": "^7.25.7",
    "babel-plugin-module-resolver": "^5.0.2",
    "chai": "^5.1.1",
    "jsdoc": "^4.0.3",
    "mocha": "^10.7.3",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "vite": "^5.4.8"
  }
}
